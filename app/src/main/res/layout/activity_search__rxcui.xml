<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search_RxCUI_Activity">

    <EditText
        android:id="@+id/rxcui_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:hint="Type RxCUI Number"
        android:background="#ffade5"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/status_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="20sp"
        android:background="@android:color/holo_blue_dark"
        android:text="Status: No search is being made..."
        android:textColor="@android:color/white"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/drug_info_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_dark"
            android:padding="8dp"
            android:text="Your result appears here..."
            android:textSize="16sp"
            android:textColor="@android:color/white"/>
    </ScrollView>

</LinearLayout>